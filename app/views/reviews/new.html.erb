<h1>Review Form for <%= @restaurant.name %> :</h1>

<%= form_for [@restaurant, @review] do |f| %>

  <div class= "row">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>
  <br>
  <div class= "row">
    <%= f.label :body, "Write Your Review" %>
    <%= f.text_area :body %>
  </div>
  <br>

  <div class= "button">
    <%= f.submit "Add Review" %>
  </div>

<% end %>
